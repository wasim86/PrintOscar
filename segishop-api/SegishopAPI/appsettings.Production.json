{
  "ConnectionStrings": {
    "DefaultConnection": "${DB_CONNECTION_STRING}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileStorage": {
    "Provider": "${FILE_STORAGE_PROVIDER:Local}",
    "LocalStorage": {
      "BasePath": "wwwroot/uploads"
    },
    "AzureStorage": {
      "ConnectionString": "${AZURE_STORAGE_CONNECTION_STRING}",
      "ContainerName": "${AZURE_STORAGE_CONTAINER:quote-attachments}"
    }
  },
  "Email": {
    "Provider": "${EMAIL_PROVIDER:SendGrid}",
    "SendGrid": {
      "ApiKey": "${SENDGRID_API_KEY}",
      "FromEmail": "${FROM_EMAIL:contact@segishop.com}",
      "FromName": "${FROM_NAME:Segi Shop}"
    }
  },
  "UseAzureStorage": "${USE_AZURE_STORAGE:false}",
  "EnableBackgroundJobs": "${ENABLE_BACKGROUND_JOBS:false}",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  }
}
